<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="garrybullock.reflex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReactionTestActivity"
            android:label="@string/title_activity_reaction_test" >
        </activity>
        <activity
            android:name=".SelectPlayerActivity"
            android:label="@string/title_activity_select_player" >
        </activity>
        <activity
            android:name=".TwoPlayerActivity"
            android:label="@string/title_activity_two_player" >
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="garrybullock.reflex.MainActivity" />
        </activity>
        <activity
            android:name=".TriviaBuzzerActivity"
            android:label="@string/title_activity_trivia_buzzer" >
        </activity>
    </application>

</manifest>
